generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String            @id @default(cuid())
  email             String            @unique
  phone             String            @unique
  password          String
  firstName         String
  lastName          String
  role              UserRole          @default(CLIENT)
  status            UserStatus        @default(PENDING)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  phoneVerified     Boolean           @default(false)
  emailVerified     Boolean           @default(false)
  lastLogin         DateTime?
  avatar            String?
  auditLogs         AuditLogs[]
  bookingsAsClient  Booking[]         @relation("ClientBookings")
  bookingAsProvider Booking[]         @relation("ProviderBookings")
  disputes          Dispute[]
  notifications     Notification[]
  payments          Payment[]
  policyViolations  PolicyViolation[]
  profile           Profile?
  terms             Terms?
  receivedReviews   Review[]          @relation("ReviewReceiver") 
  reviews           Review[]

  clientConversations   Conversation[] @relation("ClientConversations")
  providerConversations Conversation[] @relation("ProviderConversations")
  messagesSent        Message[]       @relation("MessagesSent")
  messagesReceived    Message[]       @relation("MessagesReceived")

  payouts           Payout[]      @relation
  processedPayouts  Payout[]      @relation("ProcessedPayouts")

  adminConversations       AdminConversation[]  @relation("AdminConversations")
  userAdminConversations   AdminConversation[]  @relation("UserAdminConversations")
  adminMessagesSent        AdminMessage[]       @relation("AdminMessageSender")


  disputeMessages DisputeMessage[] @relation

  
  @@index([email])
  @@index([phone])
  @@index([role])
}

model Zone {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  description String?
  color       String     @default("#3B82F6") 
  order       Int        @default(0)
  active      Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  clusters    Cluster[]
  locations   Location[]

  @@index([slug])
  @@index([active])
}


model Cluster {
  id          String     @id @default(cuid())
  zoneId      String
  name        String
  slug        String     @unique
  description String?
  order       Int        @default(0)
  active      Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  zone        Zone       @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  locations   Location[]

  @@index([zoneId])
  @@index([slug])
  @@index([active])
}

model Location {
  id             String   @id @default(cuid())
  zoneId         String
  clusterId      String?
  name           String
  slug           String   @unique
  latitude       Float?
  longitude      Float?
  matchingRadius Int      @default(5) // Default matching radius in km
  active         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  zone           Zone     @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  cluster        Cluster? @relation(fields: [clusterId], references: [id], onDelete: SetNull)
  profiles      Profile[]

  @@index([zoneId])
  @@index([clusterId])
  @@index([slug])
  @@index([active])
}

model Profile {
  id                 String             @id @default(cuid())
  userId             String             @unique
  bio                String?
  services           Service []
  yearsOfExperience  Int?
  languages          String[]
  availability       Json?
  idNumber           String?            @unique
  idDocument         String?
  certificates       String[]
  verificationStatus VerificationStatus @default(PENDING)
  verifiedAt         DateTime?
  rejectionReason    String?
  totalJobs          Int                @default(0)
  completionRate     Decimal            @default(0) @db.Decimal(5, 2)
  averageRating      Decimal            @default(0) @db.Decimal(3, 2)
  totalEarnings      Decimal            @default(0) @db.Decimal(10, 2)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime?          @updatedAt
  portfolios          Portfolio[]
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  locationId       String? 
  location         Location? @relation(fields: [locationId], references: [id])
  defaultPricingType  PricingType   @default(HOURLY)
  defaultHourlyRate   Float?
  acceptsFixedPrice   Boolean       @default(true)
  acceptsCustomQuotes Boolean       @default(true)
  minimumJobPrice     Float?        // Minimum they'll accept

  @@index([verificationStatus])
}

model Portfolio {
  id          String   @id @default(cuid())
  profileId   String
  title       String
  description String?
  images      String[]
  category    String
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
}

model Payout {
  id                String        @id @default(cuid())
  providerId        String
  amount            Decimal       @db.Decimal(10, 2)
  commission        Decimal       @db.Decimal(10, 2)
  phoneNumber       String
  status            PayoutStatus  @default(PENDING)
  mpesaCode         String?       @unique
  conversationId    String?       @unique
  originatorConversationId String?
  resultCode        Int?
  resultDesc        String?
  processedBy       String        // Admin who initiated
  processedAt       DateTime      @default(now())
  completedAt       DateTime?
  failureReason     String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  provider          User          @relation(fields: [providerId], references: [id])
  processedByUser   User          @relation("ProcessedPayouts", fields: [processedBy], references: [id])
  bookings          Booking[]     // All bookings in this payout

  @@index([providerId])
  @@index([status])
  @@index([processedBy])
  @@index([processedAt])
}


model Booking {
  id                 String        @id @default(cuid())
  bookingNumber      String        @unique
  clientId           String
  providerId         String
  service            String
  description        String
  scheduledDate      DateTime
  scheduledTime      String
  duration           Int?
  location           String
  status             BookingStatus @default(PENDING)
  amount             Decimal       @db.Decimal(10, 2)
  providerPayout     Decimal       @db.Decimal(10, 2)
  completedAt        DateTime?
  cancelledAt        DateTime?
  CancellationReason String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  commission         Decimal       @db.Decimal(10, 2)
  client             User          @relation("ClientBookings", fields: [clientId], references: [id])
  provider           User          @relation("ProviderBookings", fields: [providerId], references: [id])
  dispute            Dispute?
  payment            Payment?
  review             Review?
  payout             Payout?       @relation(fields: [payoutId], references: [id])

  pricingType       PricingType   @default(HOURLY)
  hourlyRate        Float?
  estimatedHours    Float?
  quantity          Int?          @default(1) // For PER_UNIT pricing
  unitType          String?       // e.g., "rooms", "items", "sqft
  payoutStatus       PayoutStatus  @default(PENDING) 
  paidOutAt          DateTime?                        
  payoutId           String?   

  @@index([clientId])
  @@index([providerId])
  @@index([status])
  @@index([scheduledDate])
}

model Payment {
  id                String        @id @default(cuid())
  bookingId         String        @unique
  userId            String
  amount            Decimal       @db.Decimal(10, 2)
  mpesaCode         String?       @unique
  phoneNumber       String
  status            PaymentStatus @default(PENDING)
  checkoutRequestId String?       @unique
  merchantRequestId String?
  paidAt            DateTime?
  failureReason     String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  booking           Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user              User          @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([mpesaCode])
}

model Review {
  id         String   @id @default(cuid())
  bookingId  String   @unique
  reviewerId String
  revieweeId String
  rating     Int
  comment    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  booking    Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  reviewee   User     @relation("ReviewReceiver", fields: [revieweeId], references: [id], onDelete: Cascade)
  reviewer   User     @relation(fields: [reviewerId], references: [id], onDelete: Cascade)

  @@index([reviewerId])
  @@index([revieweeId])
  @@index([rating])
}

model Dispute {
  id         String        @id @default(cuid())
  bookingId  String        @unique
  raisedBy   String
  reason     String
  resolution String?
  status     DisputeStatus @default(OPEN)
  resolvedAt DateTime?
  resolvedBy String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  booking    Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user       User          @relation(fields: [raisedBy], references: [id])
  messages   DisputeMessage[] 
  @@index([status])
}

model DisputeMessage {
  id         String              @id @default(cuid())
  disputeId  String
  senderId   String
  senderType DisputeMessageSender // CLIENT, PROVIDER, or ADMIN
  content    String              @db.Text
  readAt     DateTime?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt

  dispute    Dispute             @relation(fields: [disputeId], references: [id], onDelete: Cascade)
  sender     User                @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([disputeId])
  @@index([senderId])
  @@index([createdAt])
  @@map("dispute_messages")
}
enum DisputeMessageSender {
  CLIENT
  PROVIDER
  ADMIN
}



model Notification {
  id        String               @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean              @default(false)
  data      Json?
  createdAt DateTime             @default(now())
  actionUrl String?
  expiresAt DateTime?            @updatedAt
  priority  NotificationPriority @default(MEDIUM)
  readAt    DateTime?
  updatedAt DateTime             @updatedAt
  type      NotificationType     @default(INFO)
  user      User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read, createdAt(sort: Desc)])
}

model PolicyViolation {
  id            String   @id @default(cuid())
  userId        String
  violationType String
  severity      String
  description   String
  evidence      Json?
  resolved      Boolean  @default(false)
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([severity])
}

model AuditLogs {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  entity    String
  entityId  String?
  details   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
model Terms {
  id        String         @id @default(cuid())
  userId    String         @unique
  isAccept  Boolean        @default(true)
  user      User?          @relation(fields: [userId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}  

model Settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       Json
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ServiceCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String?    @unique
  icon        String?
  description String?
  order       Int       @default(0)

  services    Service[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("service_categories")
}

model Service {
  id          String    @id @default(cuid())
  name        String
  slug        String?    @unique
  description String?
  skillLevels String[]  // Array of skill levels

  categoryId  String
  category    ServiceCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  profiles Profile[]  // Many-to-many (Prisma creates _ProfessionalToService table)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  pricingType    PricingType      @default(HOURLY)
  hourlyRate     Float?           // For HOURLY pricing
  fixedPrice     Float?           // For FIXED/PER_TASK pricing
  priceMin       Float?           // For CUSTOM range
  priceMax       Float?           // For CUSTOM range
  estimatedHours Float?           // Estimated hours for FIXED tasks


  @@map("services")
}

model Conversation {
  id            String   @id @default(cuid())
  clientId      String   // Person booking service
  providerId    String   // Service provider
  lastMessage   String?  @db.Text
  lastMessageAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  client   User      @relation("ClientConversations", fields: [clientId], references: [id], onDelete: Cascade)
  provider User      @relation("ProviderConversations", fields: [providerId], references: [id], onDelete: Cascade)
  messages Message[]

  @@unique([clientId, providerId])
  @@index([clientId])
  @@index([providerId])
  @@index([lastMessageAt])

  @@map("conversations")
}

model Message {
  id             String        @id @default(cuid())
  conversationId String
  senderId       String
  recipientId    String
  content        String        @db.Text
  status         MessageStatus @default(SENT)
  blocked        Boolean       @default(false)
  blockReason    String?
  readAt         DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  conversation   Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User          @relation("MessagesSent", fields: [senderId], references: [id], onDelete: Cascade)
  recipient      User          @relation("MessagesReceived", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@index([recipientId])
  @@index([createdAt])
}

model AdminConversation {
  id           String           @id @default(cuid())
  adminId      String
  userId       String           
  userType     ConversationType 
  subject      String?          
  status       String           @default("ACTIVE") 
  lastMessageAt DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  admin        User             @relation("AdminConversations", fields: [adminId], references: [id], onDelete: Cascade)
  user         User             @relation("UserAdminConversations", fields: [userId], references: [id], onDelete: Cascade)
  messages     AdminMessage[]

  @@unique([adminId, userId, userType])
  @@index([adminId])
  @@index([userId])
  @@index([lastMessageAt])
  @@map("admin_conversations")
}

model AdminMessage {
  id             String             @id @default(cuid())
  conversationId String
  senderId       String
  senderType     ConversationType   // ADMIN, CLIENT, PROVIDER
  content        String             @db.Text
  attachments    String[]           @default([]) // URLs to attachments
  readAt         DateTime?
  createdAt      DateTime           @default(now())

  conversation   AdminConversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User               @relation("AdminMessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
  @@map("admin_messages")
}

enum ConversationType {
  ADMIN
  CLIENT
  PROVIDER
}

enum PricingType {
  HOURLY      
  FIXED       // Fixed price per task
  PER_UNIT    // Per unit (e.g., per room, per item)
}

    
enum MessageStatus {
  SENT
  DELIVERED
  READ
  BLOCKED
}


enum UserRole {
  CLIENT
  PROFESSIONAL
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  PENDING
  ACTIVE
  SUSPENDED
  REJECTED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  DISPUTED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum DisputeStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  CLOSED
}

enum NotificationType {
  INFO
  WARNING
  ERROR
  SUCCESS
  SECURITY_ALERT
  POLICY_VIOLATION
  STRIKE_WARNING
  PAYMENT
  JOB_UPDATE
  SYSTEM
}

enum NotificationPriority {
  LOWProfile
  MEDIUM
  HIGH
  URGENT
}

enum PayoutStatus {
  PENDING      
  PROCESSING   
  COMPLETED     
  FAILED       
  REVERSED      
}
